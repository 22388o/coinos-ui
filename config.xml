<?xml version='1.0' encoding='utf-8'?>
<widget id="io.coinos" version="1.0.1" xmlns="http://www.w3.org/ns/widgets">
    <name>CoinOS</name>
    <description>
        A bitcoin lightning wallet
    </description>
    <author email="asoltys@gmail.com" href="https://adamsoltys.com">
        Adam Soltys
    </author>
    <icon density="mdpi" height="57" platform="android" src="coinos_icon.png" width="57" />
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-qrscanner" spec="https://github.com/asoltys/cordova-plugin-qrscanner" />
    <plugin name="cordova-plugin-websocket" spec="^0.12.2" />
    <engine name="android" spec="^7.1.3" />
</widget>
